generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////
// ENUMS
////////////////////////////////////////////////////

enum Role {
  ADMIN
  SHIFT_GUARD
  GUARD
}

enum AssignmentStatus {
  PENDING
  CHECKING
  UNDER_REVIEW
  REVIEWED
  ANOMALY
}

////////////////////////////////////////////////////
// USER
////////////////////////////////////////////////////

model User {
  id         Int      @id @default(autoincrement())
  name       String
  lastName   String?
  username   String   @unique
  password   String
  role       Role
  active     Boolean  @default(true)
  softDelete Boolean  @default(false)
  shiftStart String? // HH:mm
  shiftEnd   String? // HH:mm
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  kardexEntries Kardex[]
  assignments   Assignment[] @relation("GuardAssignments")
}

////////////////////////////////////////////////////
// LOCATIONS (PARKING SPOTS)
////////////////////////////////////////////////////

model Location {
  id         Int      @id @default(autoincrement())
  aisle      String
  spot       String
  number     String
  name       String   @unique
  isOccupied Boolean  @default(false)
  active     Boolean  @default(true)
  softDelete Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  kardexEntries Kardex[]
  assignments   Assignment[]
}

model Kardex {
  id         Int      @id @default(autoincrement())
  userId     Int
  locationId Int
  timestamp  DateTime @default(now())
  notes      String?  @db.Text
  media      Json? // Array of { type: 'IMAGE' | 'VIDEO', url: 'string' }
  latitude   Float?
  longitude  Float?

  assignmentId Int? // Optional link to an assignment

  user       User        @relation(fields: [userId], references: [id])
  location   Location    @relation(fields: [locationId], references: [id])
  assignment Assignment? @relation(fields: [assignmentId], references: [id])

  @@index([userId])
  @@index([locationId])
  @@index([timestamp])
}

model Assignment {
  id         Int              @id @default(autoincrement())
  guardId    Int
  locationId Int
  status     AssignmentStatus @default(PENDING)
  assignedBy Int // ID of user who created assignment
  notes      String?          @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  guard    User     @relation("GuardAssignments", fields: [guardId], references: [id])
  location Location @relation(fields: [locationId], references: [id])
  kardex   Kardex[]

  tasks AssignmentTask[]

  @@index([guardId])
  @@index([locationId])
}

model AssignmentTask {
  id           Int       @id @default(autoincrement())
  assignmentId Int
  description  String
  reqPhoto     Boolean   @default(false)
  completed    Boolean   @default(false)
  completedAt  DateTime?

  assignment Assignment @relation(fields: [assignmentId], references: [id])

  @@index([assignmentId])
}
